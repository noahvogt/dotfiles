# toggle mute
"amixer set Master toggle && pkill -RTMIN+1 dwmblocks"
   XF86AudioMute
"amixer set Master toggle && pkill -RTMIN+1 dwmblocks"
   Mod4 + F1

# lower volume
"amixer set Master 5%- && pkill -RTMIN+1 dwmblocks"
   XF86AudioLowerVolume
"amixer set Master 5%- && pkill -RTMIN+1 dwmblocks"
   Mod4 + F2

# increase volume
"amixer set Master 5%+ && pkill -RTMIN+1 dwmblocks"
   XF86AudioRaiseVolume
"amixer set Master 5%+ && pkill -RTMIN+1 dwmblocks"
   Mod4 + F3

"rfkill toggle all && pkill -RTMIN+3 dwmblocks"
   Mod4 + F4

"rfkill toggle wifi && pkill -RTMIN+3 dwmblocks"
   Mod4 + F5

# open htop in new terminal window
"st -e htop"
   Mod4 + F6

# dmenu mount prompt
"dmenumount"
   Mod4 + F7

# dmenu umount prompt
"dmenuumount"
   Mod4 + F8

"dec-kbd-blt"
   XF86KbdBrightnessDown
"dec-kbd-blt"
   Mod4 + F9

"inc-kbd-blt"
   XF86KbdBrightnessUp
"inc-kbd-blt"
   Mod4 + F10

# decrease monitor brightness
"dec-brightness 5 && brightness-save && set-brt"
   XF86MonBrightnessDown
"dec-brightness 5 && brightness-save && set-brt"
   Mod4 + F11

# increase monitor brightness
"inc-brightness 5 && brightness-save && set-brt"
   XF86MonBrightnessUp
"inc-brightness 5 && brightness-save && set-brt"
   Mod4 + F12

# select area of screenshot
"screenshot-area"
   Mod4 + Print

# dmenu emoji selector
"dmenuunicode"
   Mod4 + E

# command prompt (only non-root commands)
"dmenuprompt"
   Mod4 + R

# force "reloading" dwm windows
"st -e exit"
   Mod4 + S

# dmenu greek letters prompt
"dmenu-greek-letters-prompt"
   Mod4 + G

# open chromium
"chromium"
   Mod4 + V

# make a screenshot of the full screen
"screenshot"
   Print

# toggle picom
"toggle-picom"
   Mod4 + W

# open stream copied to clip board in mpv
"open-stream"
   Mod4 + O

# open gui file manager
"pcmanfm"
   Mod4 + A

# open newsboat in new terminal window
"st -e newsboat"
   Mod4 + U

# open neomutt in new terminal window
"st -e neomutt"
   Mod4 + Z

# open ncmpcpp in new terminal window
"st -e ncmpcpp"
   Mod4 + section

"dmenu_run"
   Mod4 + P

### MPD CPMMANDS

"mpc next"
   XF86AudioNext
"mpc next"
   Mod4 + Shift + less

"mpc prev"
   XF86AudioPrev
"mpc prev"
   Mod4 + less

"mpc toggle"
  XF86AudioPlay
"mpc toggle"
   Mod4 + Y

"mpc seek -00:00:05"
   Mod4 + Left

"mpc seek +00:00:05"
   Mod4 + Right

"echo \"$(mpc current)\" | xargs notify-send"
   Mod4 + C

"mpc stop && killall mpd"
   Mod4 + X
