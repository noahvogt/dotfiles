# toggle mute
"amixer set Master toggle && pkill -RTMIN+1 dwmblocks"
   XF86AudioMute
"amixer set Master toggle && pkill -RTMIN+1 dwmblocks"
   Mod4 + F1

# lower volume
"amixer set Master 10%- && pkill -RTMIN+1 dwmblocks"
   XF86AudioLowerVolume
"amixer set Master 10%- && pkill -RTMIN+1 dwmblocks"
   Mod4 + F2

# increase volume
"amixer set Master 10%+ && pkill -RTMIN+1 dwmblocks"
   XF86AudioRaiseVolume
"amixer set Master 10%+ && pkill -RTMIN+1 dwmblocks"
   Mod4 + F3

# dmenu mount prompt
"dmenumount"
   Mod4 + F8

# dmenu umount prompt
"dmenuumount"
   Mod4 + F9

# decrease monitor brightness
"dec-brightness && pkill -RTMIN+2 dwmblocks && brightness-save"
   Mod4 + F11

# increase monitor brightness
"inc-brightness && pkill -RTMIN+2 dwmblocks && brightness-save"
   Mod4 + F12

# select area of screenshoot
"screenshot-area"
   Mod4 + Print

# dmenu emoji selector
"dmenuunicode"
   Mod4 + E

# command prompt (only non-root commands)
"dmenuprompt"
   Mod4 + R

# force "reloading" dwm windows
"st -e exit"
   Mod4 + S

# dmenu greek letters prompt
"dmenu-greek-letters-prompt"
   Mod4 + G

# open chromium
"chromium"
   Mod4 + V

# make a screenshot of the full screen
"screenshot"
   Print

# toggle picom
"toggle-picom"
   Mod4 + W

# open stream copied to clip board in mpv
"open-stream"
   Mod4 + O

# open gui file manager
"pcmanfm"
   Mod4 + A

# open newsboat in new terminal window
"st-exec newsboat"
   Mod4 + U

# open neomutt in new terminal window
"st-exec neomutt"
   Mod4 + Z

# open htop in new terminal window
"st-exec htop"
   Mod4 + F7
